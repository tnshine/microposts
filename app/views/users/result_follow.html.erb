<div class="row">
  <aside class="col-md-4">
    <%= render 'shared/user_detail' %>
  </aside>
  <div class="col-md-8">
      <section class="user_info">

      <% if request.path_info.end_with?("followers") %>
        <h3><%= @user.name %>をフォローしているユーザー</h3>
      <% else %>
        <h3><%= @user.name %>がフォローしているユーザー</h3>
      <% end %>

      <% if @users.any? %>
        <ul class="list-group">
          <% @users.each do |user| %>
          <li class="list-group-item" style="overflow:hidden;">
            <h2 class="list-group-item-heading text-left">
              <%= gravatar_for(user, size: 50) %>
              <%= link_to user.name, user %>
            </h2>
          </li>
          <% end %>
        </ul>
        <%= paginate @users %>
      <% end %>
      </section>
  </div>
</div>
