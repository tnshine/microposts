<div class="row">
  <aside class="col-md-4">
    <%= render 'shared/user_detail' %>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>

    <% if @user.microposts.any? %>
      <h3>Favorite Microposts (<%= @user.favorite_microposts.count %>)</h3>
      <ol class="microposts">
      <% @microposts.each do |micropost| %>
        <%= render partial: 'microposts/micropost', locals: { micropost: micropost } %>
      <% end %>
      </ol>
      <%= paginate @microposts %>
    <% end %>

  </div>
</div>
