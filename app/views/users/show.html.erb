<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
        <%= gravatar_for(@user, size: 50) %>
      <h1>
        <%= @user.name %>
      </h1>
      <span><%= link_to "view profile", @user %></span>
      <span><%= pluralize(@user.microposts.count, "micropost") %></span>
    </section>
    <section>
      <p><%= @user.description %></p>
      <p><%= @user.location %></p>
      <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <a href="<%= following_user_path %>" class="btn btn-default">
          followings <span class="badge"><%= @user.following_users.count %></span>
        </a>
        <a href="<%= followers_user_path %>" class="btn btn-default">
          followers <span class="badge"><%= @user.follower_users.count %></span>
        </a>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>

    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
      <% @microposts.each do |micropost| %>
        <%= render partial: 'microposts/micropost', locals: { micropost: micropost } %>
      <% end %>
      </ol>
      <%= paginate @microposts %>
    <% end %>

  </div>
</div>
